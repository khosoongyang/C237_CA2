<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Product | Seam & Soul</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS for styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Google Fonts: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    /* Page layout and typography */
    body {
      background: #fff;
      color: #111;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
    }

    /* Form container styling */
    .container {
      max-width: 560px;
      margin: 52px auto;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 2px 16px #0001;
      padding: 36px 26px 60px 26px;
      border: 1px solid #eee;
    }

    /* Heading style */
    h1 {
      text-align: center;
      margin-bottom: 32px;
      font-weight: 700;
      color: #111;
      font-size: 2.2rem;
    }

    /* Label styling */
    .form-label {
      font-weight: 500;
      color: #111;
    }

    /* Input, textarea, and select box styling */
    .form-control, textarea, .form-select {
      border-radius: 8px;
      border: 1.2px solid #222;
      font-size: 1.07rem;
      font-family: 'Poppins', sans-serif;
    }

    /* Focus effect for form fields */
    .form-control:focus, .form-select:focus {
      border-color: #111;
      box-shadow: 0 0 0 2px #1112;
    }

    /* Submit button style */
    .btn-primary {
      background: #111;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1.1rem;
      width: 100%;
      padding: 11px 0;
      margin-top: 12px;
      transition: background 0.17s;
    }

    /* Hover effect for button */
    .btn-primary:hover {
      background: #222;
    }

    /* Alert boxes for success/error */
    .alert-danger, .alert-success {
      border-radius: 8px;
      font-size: 1rem;
    }

    /* Link styling */
    a {
      color: #111;
      text-decoration: underline;
      font-weight: 500;
    }

    a:hover {
      color: #333;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Add New Product</h1>

    <!-- If there are errors, display them in a red alert box -->
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% errors.forEach(function(error){ %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- If there's a success message, show it in a green alert box -->
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">
        <%= success %>
      </div>
    <% } %>

    <!-- Form to add a new product -->
    <form action="/addProduct" method="POST" enctype="multipart/form-data" autocomplete="off">
      
      <!-- Product name input -->
      <div class="form-group mb-3">
        <label for="productName" class="form-label">Clothing Name</label>
        <input type="text" class="form-control" id="productName" name="productName" required
          value="<%= formData && formData.productName ? formData.productName : '' %>">
      </div>

      <!-- Category dropdown -->
      <div class="form-group mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category" required>
          <option value="" disabled <%= !formData.category ? 'selected' : '' %>>Select a category</option>
          <option value="Women" <%= formData.category === 'Women' ? 'selected' : '' %>>Women</option>
          <option value="Men" <%= formData.category === 'Men' ? 'selected' : '' %>>Men</option>
          <option value="Kids" <%= formData.category === 'Kids' ? 'selected' : '' %>>Kids</option>
          <option value="Baby" <%= formData.category === 'Baby' ? 'selected' : '' %>>Baby</option>
        </select>
      </div>

      <!-- Type dropdown (populated by JavaScript) -->
      <div class="form-group mb-3">
        <label for="type" class="form-label">Type</label>
        <select class="form-select" id="type" name="type" required>
          <option value="" disabled selected>Select a type</option>
        </select>
      </div>

      <!-- Quantity input -->
      <div class="form-group mb-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" required
          value="<%= formData && formData.quantity ? formData.quantity : '' %>">
      </div>

      <!-- Price input -->
      <div class="form-group mb-3">
        <label for="price" class="form-label">Price ($)</label>
        <input type="number" class="form-control" id="price" name="price" min="0" step="1" required
          value="<%= formData && formData.price ? formData.price : '' %>">
      </div>

      <!-- Image upload -->
      <div class="form-group mb-3">
        <label for="image" class="form-label">Clothing Image</label>
        <input class="form-control" type="file" id="image" name="image" accept="image/*" 
        <%= formData && formData.image ? '' : 'required' %>>
      </div>

      <!-- Description textarea -->
      <div class="form-group mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" required>
          <%= formData && formData.description ? formData.description : '' %>
        </textarea>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary">Add Clothing Item</button>

      <!-- Navigation link -->
      <div class="text-center mt-3">
        <a href="/category">Back to Category</a>
      </div>
    </form>
  </div>

  <!-- JavaScript for dynamically populating type options -->
  <script>
    // Get dropdown elements
    const categorySelect = document.getElementById('category');
    const typeSelect = document.getElementById('type');

    // Store previous values for repopulation
    const initialSelectedCategory = '<%= formData.category || "" %>';
    const initialSelectedType = '<%= formData.type || "" %>';

    // Define the type options for each category
    const typeOptions = {
      "Women": [
        "Shirts and Blouses",
        "Bottoms",
        "Outerwear",
        "Accessories"
      ],
      "Men": [
        "Shirts and Polos",
        "Pants and Shorts",
        "Jackets and Hoodies",
        "Watches"
      ],
      "Kids": [
        "Kids Tops",
        "Kids Bottoms",
        "Kids Outerwear",
        "Kids Accessories"
      ],
      "Baby": [
        "Baby Onesies",
        "Baby Pants",
        "Baby Jackets",
        "Baby Accessories"
      ]
    };

    // Function to populate the type dropdown based on selected category
    function populateTypes(selectedCategory, selectedType = '') {
      typeSelect.innerHTML = '<option value="" disabled selected>Select a type</option>'; // Clear previous options

      const types = typeOptions[selectedCategory]; // Get types for selected category

      if (types && types.length > 0) {
        types.forEach(type => {
          const option = document.createElement('option');
          option.value = type;
          option.textContent = type;

          // Retain selected type if it matches
          if (type === selectedType) {
            option.selected = true;
          }

          typeSelect.appendChild(option); // Add to dropdown
        });

        typeSelect.disabled = false; // Enable the dropdown
      } else {
        typeSelect.disabled = true; // Disable if no types found
      }
    }

    // When user changes the category, update the types
    categorySelect.addEventListener('change', function() {
      populateTypes(this.value);
    });

    // Populate the dropdown on initial page load (useful if user submitted form with errors)
    if (initialSelectedCategory) {
      populateTypes(initialSelectedCategory, initialSelectedType);
    } else {
      typeSelect.disabled = true;
    }
  </script>
</body>
</html>
