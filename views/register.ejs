<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register | Seam & Soul</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Body Styling */
        body {
            background: #fff; /* White background color */
            color: #111; /* Dark text color */
            font-family: 'Poppins', sans-serif; /* Global font setting */
            min-height: 100vh; /* Ensure body takes full viewport height */
        }

        /* Container for the registration form */
        .container {
            max-width: 560px; /* Maximum width for the form container */
            margin: 52px auto; /* Center the container horizontally and add top/bottom margin */
            background: #fff; /* White background for the form */
            border-radius: 16px; /* Rounded corners for the container */
            box-shadow: 0 2px 16px rgba(0, 0, 0, 0.066); /* Subtle shadow for depth */
            padding: 36px 26px 32px 26px; /* Padding inside the container */
            border: 1px solid #eee; /* Light gray border */
        }

        /* Styling for the main heading (Register) */
        h1 {
            text-align: center; /* Center align heading */
            margin-bottom: 32px; /* Space below the heading */
            font-weight: 700; /* Bold font weight */
            font-family: 'Poppins', sans-serif;
            color: #111; /* Dark text color */
            letter-spacing: -0.5px; /* Slightly tighter letter spacing */
            font-size: 2.2rem; /* Font size for the heading */
        }

        /* Styling for form labels */
        .form-label {
            font-weight: 500; /* Medium font weight */
            color: #111; /* Dark text color */
        }

        /* Styling for form input controls and textareas */
        .form-control, textarea {
            border-radius: 8px; /* Rounded corners for input fields */
            border: 1.2px solid #222; /* Darker border for input fields */
            font-size: 1.07rem; /* Font size for input text */
            font-family: 'Poppins', sans-serif;
        }

        /* Focus state for form input controls */
        .form-control:focus {
            border-color: #111; /* Darker border color on focus */
            box-shadow: 0 0 0 2px rgba(17, 17, 17, 0.078); /* Subtle shadow on focus */
        }

        /* Styling for the primary button (Register button) */
        .btn-primary {
            background: #111; /* Dark background for the button */
            border: none; /* Remove default border */
            border-radius: 8px; /* Rounded corners for the button */
            font-weight: 600; /* Semi-bold font weight */
            font-size: 1.1rem; /* Font size for button text */
            width: 100%; /* Full width button */
            padding: 11px 0; /* Vertical padding */
            margin-top: 12px; /* Space above the button */
            transition: background 0.17s; /* Smooth transition for background color on hover */
        }

        /* Hover state for the primary button */
        .btn-primary:hover {
            background: #222; /* Slightly lighter dark background on hover */
        }

        /* Styling for Bootstrap alert messages (danger and success) */
        .alert-danger, .alert-success {
            border-radius: 8px; /* Rounded corners for alerts */
            font-size: 1rem; /* Font size for alert text */
        }

        /* Styling for general links */
        a {
            color: #111; /* Dark text color for links */
            text-decoration: underline; /* Underline links */
            font-weight: 500; /* Medium font weight */
        }

        /* Hover state for links */
        a:hover {
            color: #333; /* Slightly lighter dark color on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Register</h1>
        <% if (typeof errors !== "undefined" && errors.length > 0) { %>
            <div class="alert alert-danger">
                <ul class="mb-0">
                    <% errors.forEach(function(error){ %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
        <% if (typeof success !== "undefined" && success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>
        <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required
                value="<%= formData && formData.username ? formData.username : '' %>">
            </div>
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required
                value="<%= formData && formData.email ? formData.email : '' %>">
            </div>
            <div class="form-group mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="form-group mb-3">
                <label class="form-label d-block">Gender:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderMale" value="Male"
                    <%= formData && formData.gender === 'Male' ? 'checked' : '' %> required>
                    <label class="form-check-label" for="genderMale">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="Female"
                    <%= formData && formData.gender === 'Female' ? 'checked' : '' %> required>
                    <label class="form-check-label" for="genderFemale">Female</label>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="address" class="form-label">Address:</label>
                <textarea class="form-control" id="address" name="address" placeholder="Enter your address" rows="3" required><%= formData && formData.address ? formData.address : '' %></textarea>
            </div>
            <div class="form-group mb-3">
                <label for="contactNo" class="form-label">Contact Number:</label>
                <input type="tel" class="form-control" id="contactNo" name="contact" placeholder="Enter your phone number" required pattern="[0-9]{8,15}"
                value="<%= formData && formData.contact ? formData.contact : '' %>">
            </div>
            <div class="form-group mb-3">
                <label for="firstname" class="form-label">First Name:</label>
                <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Enter your first name" required
                value="<%= formData && formData.firstname ? formData.firstname : '' %>">
            </div>
            <div class="form-group mb-3">
                <label for="lastname" class="form-label">Last Name:</label>
                <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Enter your last name" required
                value="<%= formData && formData.lastname ? formData.lastname : '' %>">
            </div>
            <div class="form-group mb-3">
                <label for="profilepic" class="form-label">Profile Picture</label>
                <input class="form-control" type="file" id="profilepic" name="profilepic" accept="image/*" <%= formData && formData.profilepic ? '' : 'required' %>>
            </div>
            <div class="form-group mb-3">
                <label for="role" class="form-label">Role:</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="customer" <%= formData && (formData.role === 'customer' || formData.role === 'Customer') ? 'selected' : '' %>>Customer</option>
                    <option value="seller" <%= formData && (formData.role === 'seller' || formData.role === 'Seller') ? 'selected' : '' %>>Seller</option>
                    <option value="admin" <%= formData && (formData.role === 'admin' || formData.role === 'Admin') ? 'selected' : '' %>>Admin</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <div class="text-center mt-3">
                <a href="/login">Already have an account? Login here</a>
            </div>
        </form>
    </div>
</body>
</html>
