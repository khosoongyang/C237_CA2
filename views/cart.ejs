<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Cart | Seam & Soul</title>

  <!-- Bootstrap CSS for layout and components -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  
  <!-- Google Font: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  
  <!-- Font Awesome icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <style>
    /* Set general font and background */
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #ffffff;
      color: #000000;
    }

    /* Style for cart title */
    .cart-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 20px;
    }

    /* Empty cart section styling */
    .empty-cart {
      text-align: center;
      padding: 40px 0;
      color: #666;
    }

    .empty-cart i {
      font-size: 4rem;
      color: #bbb;
      margin-bottom: 10px;
    }

    /* Product image style */
    .book-cover {
      width: 60px;
      height: auto;
      border-radius: 4px;
    }

    /* Quantity select width (not used here but defined) */
    .quantity-select {
      width: 80px;
    }

    /* Remove button style */
    .btn-return {
      background-color: #000;
      color: #fff;
      border: none;
    }

    .btn-return:hover {
      background-color: #333;
    }

    /* Back to shopping button style */
    .btn-back {
      background-color: transparent;
      border: 1px solid #000;
      color: #000;
    }

    .btn-back:hover {
      background-color: #000;
      color: #fff;
    }

    /* Table vertical alignment */
    table th,
    table td {
      vertical-align: middle;
    }

    /* Category badge styling */
    .badge {
      font-size: 0.9rem;
      padding: 5px 10px;
      background-color: #f0f0f0;
      color: #000;
    }
  </style>
</head>

<body>

  <div class="container py-4">
    <!-- Cart heading with shopping cart icon -->
    <h2 class="cart-title">
      <i class="fas fa-shopping-cart me-2"></i>Your Cart
    </h2>

    <!-- Check if the cart is empty -->
    <% if (cart.length === 0) { %>
      <!-- Show empty cart message -->
      <div class="empty-cart">
        <i class="fas fa-box-open"></i>
        <h4>Your cart is empty</h4>
        <p class="text-muted">Browse our collection to find products</p>

        <!-- Button to go back to product listing -->
        <a href="/" class="btn btn-back mt-3">
          <i class="fas fa-store me-1"></i>Browse Products
        </a>
      </div>
    <% } else { %>
      <!-- Show cart table if cart has items -->
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Category</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- Loop through cart items -->
            <% for (let i = 0; i < cart.length; i++) { %>
              <tr>
                <!-- Product name -->
                <td><%= cart[i].productName %></td>

                <!-- Product image -->
                <td>
                  <img src="/uploads/<%= cart[i].image %>" class="book-cover" alt="<%= cart[i].productName %>">
                </td>

                <!-- Product category -->
                <td>
                  <span class="badge"><%= cart[i].category %></span>
                </td>

                <!-- Product price -->
                <td>$<%= cart[i].price %></td>

                <!-- Quantity of the item -->
                <td><%= cart[i].quantity %></td>

                <!-- Remove from cart form -->
                <td>
                  <form action="/remove-from-cart/<%= cart[i].productId %>" method="POST">
                    <!-- Confirm before removing item -->
                    <button type="submit" class="btn btn-return" onclick="return confirm('Remove this item?')">
                      <i class="fas fa-times me-1"></i>Remove
                    </button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Button to go back and continue shopping -->
      <div class="mt-4">
        <a href="/" class="btn btn-back">
          <i class="fas fa-arrow-left me-1"></i>Continue Shopping
        </a>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

