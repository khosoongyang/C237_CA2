<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #1f1f1f, #292727);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 40px 20px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }

    .cart-container {
      background: rgba(255, 255, 255, 0.06);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
      padding: 40px 30px;
      width: 100%;
      max-width: 850px;
      animation: fadeIn 0.5s ease;
    }

    h2 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
      color: #fff;
    }

    table {
      color: #fff;
    }

    .table th, .table td {
      vertical-align: middle;
      text-align: center;
      background-color: transparent;
    }

    .table th {
      background-color: rgba(255, 255, 255, 0.08);
    }

    .table img {
      border-radius: 8px;
      max-width: 70px;
    }

    .btn-primary {
      background: #fff;
      color: #111;
      font-weight: 600;
      border: none;
      border-radius: 10px;
      padding: 10px 20px;
      transition: all 0.2s ease-in-out;
    }

    .btn-primary:hover {
      background: #ddd;
      color: #000;
    }

    .empty-message {
      text-align: center;
      font-size: 1.1rem;
      margin-top: 30px;
    }

    .total {
      text-align: right;
      font-size: 1.4rem;
      font-weight: 600;
      margin-top: 20px;
      color: #eee;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <div class="cart-container">
    <h2>Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <div class="empty-message">
        <p>Your cart is empty.</p>
        <p>Go back to home?</p>
        <a href="/" class="btn btn-primary mt-3">Back to Home</a>
      </div>
    <% } else { %>
      <table class="table table-bordered table-dark table-hover align-middle">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
              <td><%= cart[i].productName %></td>
              <td><img src="/images/<%= cart[i].image %>" alt="Product Image"></td>
              <td><%= cart[i].quantity %></td>
              <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% } %>
        </tbody>
      </table>

      <div class="total">Total: $<%= total.toFixed(2) %></div>

      <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
    <% } %>
  </div>
</body>
</html>
