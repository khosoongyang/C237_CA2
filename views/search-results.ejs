      <input type="text" name="q" placeholder="Search by keyword" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" />
      <button type="submit">Search</button>
    </div>
  </form>

  <!-- Optionally, show results for the query -->
  <% if (typeof searchQuery !== 'undefined' && searchQuery.trim() !== '') { %>
    <div class="container mt-4 mb-5">
