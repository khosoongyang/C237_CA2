        <% } else { %>
          <div class="row mt-4">
            <% products.forEach(function(product) { %>
              <div class="col-md-4 mb-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= product.productName %></h5>
                    <p class="card-text">Price: $<%= product.price %></p>
                  </div>
                </div>
